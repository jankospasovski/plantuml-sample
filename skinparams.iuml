'Sequence Diagrams
hide footbox
skinparam BoxPadding 10
skinparam sequence {
  'Box
  BoxFontColor Black
  BoxFontName FONTSANS
  BoxFontSize 10
  BoxFontStyle plain
  BoxBackgroundColor transparent
  BoxBorderColor Black

  'Delay
  DelayFontColor Black
  DelayFontName FONTSANS
  DelayFontSize 10
  DelayFontStyle plain

  'Divider
  DividerFontColor Black
  DividerFontName FONTSANS
  DividerFontSize 10
  DividerFontStyle plain
