  'Group
  GroupFontColor Black
  GroupFontName FONTSANS
  GroupFontSize 10
  GroupFontStyle plain
  GroupHeaderFontColor Black
  GroupHeaderFontName FONTSANS
  GroupHeaderFontSize 10
  GroupHeaderFontStyle plain
  GroupBackgroundColor WhiteSmoke
  GroupBodyBackgroundColor White
  GroupBorderColor Black
  GroupBorderThickness 1

  'Life line
  LifeLineBackgroundColor transparent
  LifeLineBorderColor Black
  LifeLineBorderThickness 1

  'Message
  MessageAlignment center
  MessageTextAlignment left

  'Newpage
  NewpageSeparatorColor Gray

  'Participant
  Participant plain

  'Reference
  ReferenceFontColor Black
