@startuml
/'
 ' Style for PlantUML'
 '/

' Shadowing
skinparam shadowing false

' Resolution for output image
skinparam dpi 300

' Default font'
skinparam default{
  FontColor Black
  FontName sans-serif
  FontSize 14
  FontStyle normal
  MonospacedFontName monospace
  TextAlign left
}

' Note
skinparam note {
  BackgroundColor LemonChiffon
  BorderColor Black
  BorderThickness 1
  FontColor Black
  FontName sans-serif
  FontSize 10
  FontStyle normal
}

' Actor
skinparam actor {
  BackgroundColor WhiteSmoke
  BorderColor Black
  FontColor Black
  FontName sans-serif
  FontSize 14
  FontStyle normal
  StereotypeFontColor Black
  StereotypeFontName monospace
  StereotypeFontSize 10
  StereotypeFontStyle normal
}

' Boundary
skinparam boundary {
  BackgroundColor WhiteSmoke
  BorderColor Black
  FontColor Black
  FontName sans-serif
  FontSize 14
  FontStyle normal
  StereotypeFontColor Black
  StereotypeFontName monospace
  StereotypeFontSize 10
  StereotypeFontStyle normal
}

' Control
skinparam control {
  BackgroundColor WhiteSmoke
  BorderColor Black
  FontColor Black
  FontName sans-serif
  FontSize 14
  FontStyle normal
  StereotypeFontColor Black
  StereotypeFontName monospace
  StereotypeFontSize 10
  StereotypeFontStyle normal
}

' Entity
skinparam entity {
  BackgroundColor WhiteSmoke
  BorderColor Black
  FontColor Black
  FontName sans-serif
  FontSize 14
  FontStyle normal
  StereotypeFontColor Black
  StereotypeFontName monospace
  StereotypeFontSize 10
  StereotypeFontStyle normal
}

' Database
skinparam database {
  BackgroundColor WhiteSmoke
  BorderColor Black
  FontColor Black
  FontName sans-serif
  FontSize 14
  FontStyle normal
  StereotypeFontColor Black
  StereotypeFontName monospace
  StereotypeFontSize 10
  StereotypeFontStyle normal
}

' Participant
skinparam participant {
  BackgroundColor WhiteSmoke
  BorderColor Black
  FontColor Black
  FontName sans-serif
  FontSize 14
  FontStyle normal
}

' Arrow
skinparam arrow {
  Color Black
  FontColor Black
  FontName sans-serif
  FontSize 10
  FontStyle normal
  LollipopColor Black
  MessageAlignment center
  Thickness 1
}

' Sequence Diagrams
skinparam sequence {
  ' Life line
  LifeLineBackgroundColor White
  LifeLineBorderColor Black
  LifeLineBorderThickness 1

  ' Group
  GroupBackgroundColor WhiteSmoke
  GroupBodyBackgroundColor White
  GroupBorderColor Black
  GroupBorderThickness 1
  GroupFontColor Black
  GroupFontName sans-serif
  GroupFontSize 10
  GroupFontStyle normal
  GroupHeaderFontColor Black
  GroupHeaderFontName sans-serif
  GroupHeaderFontSize 10
  GroupHeaderFontStyle normal

  ' Reference
  ReferenceBackgroundColor White
  ReferenceBorderColor Black
  ReferenceBorderThickness 1
  ReferenceFontColor Black
  ReferenceFontName sans-serif
  ReferenceFontSize 10
  ReferenceFontStyle normal
  ReferenceHeaderBackgroundColor WhiteSmoke

  ' Actor and Participant
  ActorBorderThickness 1.5
  ParticipantBorderThickness 1.5
}

' Class Diagrams
skinparam class {
  BackgroundColor White
  HeaderBackgroundColor White
  BorderColor Black
  BorderThickness 1

  FontColor Black
  FontName sans-serif
  FontSize 14
  FontStyle normal

  ' Stereotype
  StereotypeFontColor black
  StereotypeFontSize 10

  ' Attribute
  AttributeFontColor black
  AttributeIconSize 0
}

' Crcled Character in Class Diagram'
skinparam class {
  CharacterFontColor Black
  CharacterFontName sans-serif
  CharacterFontSize 14
  CharacterFontStyle normal
}

@enduml
